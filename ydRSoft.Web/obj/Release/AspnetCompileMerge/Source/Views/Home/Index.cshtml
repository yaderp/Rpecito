<script>
    
    $("#buttonEnviar").click(function () {
        var dataString = new FormData();
        dataString.append("Nombre", $("#vNombre").val());
        dataString.append("Correo", $("#vCorreo").val());
        dataString.append("Consulta", $("#vConsulta").val());
        $.ajax({
            url: "@Url.Action("EnviarCorreo", "Home")",
            type: "POST",
        data: dataString,
        contentType: false,
        processData: false,
        //async: false,
        success: function (dato) {
            if (dato.Error) {
                $("#spanExito").html("");
                $("#spanError").html(dato.Mensaje);
            } else {
                $("#spanError").html("");
                $("#spanExito").html(dato.Mensaje);
                $("#vNombre").val("");
                $("#vCorreo").val("");
                $("#vConsulta").val("");
            }
        }
    });
    });
</script>
