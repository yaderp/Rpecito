@{
    ViewBag.Title = "Lista Guia";
    //Layout = "~/Views/Shared/_LayoutLogistica.cshtml";
}

<script>
    window.onload = function () {
        loadInicio();
    };

</script>
<div id="resultado"></div>

@section scripts
{
    <script>
        function loadInicio() {
            $.get("/Compra/getListaGuia", { IdEstado:@ydRSoft.ydR.Estado.APROBADO}, function (response) {
                $("#resultado").hide("slow", function () {
                    $(this).html(response);
                    $(this).show("slow");
                });
            });
        };
    </script>
}

